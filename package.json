{
  "name": "cert-verifier-js",
  "version": "1.0.0",
  "description": "Javascript library for verifying Blockcerts",
  "main": "verifier.js",
  "scripts": {
    "test": "mocha --compilers js:babel-core/register tests/test*.js",
    "build": "browserify lib/index.js --s Verifier -o verifier.js -t [ babelify --presets [ es2015 ] ] -t [ brfs ]",
    "uglify": "uglifyjs bundle.js --compress --mangle --output verifier.js"
  },
  "author": "Kim Duffy",
  "license": "MIT",
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "dependencies": {
    "bigi": "^1.4.2",
    "bitcoinjs-lib": "^2.3.0",
    "bs58": "^3.0.0",
    "buffer": "^5.0.1",
    "chai": "^3.5.0",
    "debug": "^3.0.1",
    "ecurve": "^1.0.4",
    "jsonld": "^0.4.11",
    "mocha": "^3.2.0",
    "sha256": "^0.2.0",
    "string.prototype.startswith": "^0.2.0",
    "verror": "^1.9.0",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "brfs": "^1.4.3",
    "browserify": "^14.3.0",
    "uglify-js": "^3.0.8"
  }
}