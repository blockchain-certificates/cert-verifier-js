{
  "name": "@blockcerts/cert-verifier-js",
  "version": "0.0.0-dev",
  "description": "Javascript library for verifying Blockcerts",
  "repository": {
    "type": "git",
    "url": "https://github.com/blockchain-certificates/cert-verifier-js.git"
  },
  "main": "dist/verifier/index.js",
  "module": "dist/verifier-es/index.js",
  "node": "dist/verifier-node/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "dts:bundle": "dts-bundle-generator -o ./dist/index.d.ts --project tsconfig.json --no-banner src/index.ts",
    "test": "vitest run",
    "test:build": "npm run test:manual:node:server& npm run test:build:esm && npm run test:build:cjs && npm run test:build:node && npm run test:build:iife && kill -9 $(lsof -t -i:4000)",
    "test:build:node": "vitest run --dir test/build -c test/build/vitest.config.build.node.ts --silent",
    "test:build:cjs": "vitest run --dir test/build -c test/build/vitest.config.build.cjs.ts --silent",
    "test:build:esm": "vitest run --dir test/build -c test/build/vitest.config.build.esm.ts --silent",
    "test:build:iife": "karma start --single-run",
    "test:manual:browser": "rollup -c test/manual-testing/browser/rollup.config.mjs",
    "test:manual:node:server": "node test/manual-testing/node/server.js",
    "test:manual:node:server:watch": "nodemon test/manual-testing/node/server.js",
    "test:manual:node:verify": "node test/manual-testing/node/request.mjs",
    "test:watch": "vitest",
    "test:coverage": "vitest run --silent --coverage.enabled",
    "test:coverage:report": "codecov",
    "build": "rimraf dist && npm run build:esm && npm run build:iife && npm run build:node && npm run dts:bundle && npm run test:build",
    "build:esm": "rollup -c",
    "build:iife": "rollup -c rollup.iife.config.mjs",
    "build:node": "rollup -c rollup.node.config.mjs",
    "transpile:mocks:iife": "rollup -c test/build/scripts/rollup.mocks.config.mjs",
    "clean:lib:ts": "rimraf lib/\"**\"/*.ts",
    "lint": "eslint . --ext .ts",
    "semantic-release": "HUSKY=0 semantic-release",
    "prepare": "husky install"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Kim Duffy",
  "maintainers": [
    "Matthieu Coll√©",
    "Julien Fraichot"
  ],
  "license": "MIT",
  "dependencies": {
    "@blockcerts/ecdsa-secp256k1-signature-2019": "^0.1.8",
    "@blockcerts/ecdsa-secp256k1-verification-key-2019": "^0.1.9",
    "@blockcerts/explorer-lookup": "^1.6.0",
    "@blockcerts/hashlink-verifier": "^2.0.0",
    "@blockcerts/schemas": "^3.9.0",
    "@did-core/did-ld-json": "npm:@blockcerts/did-ld-json@^0.1.2",
    "@digitalbazaar/data-integrity": "^2.1.0",
    "@digitalbazaar/ecdsa-sd-2023-cryptosuite": "github:blockchain-certificates/ecdsa-sd-2023-cryptosuite#chore/secp256k1-with-multikey-fork",
    "@digitalbazaar/ed25519-multikey": "^1.3.1",
    "@digitalbazaar/ed25519-signature-2020": "^5.2.0",
    "@digitalbazaar/ed25519-verification-key-2020": "^4.1.0",
    "@digitalbazaar/eddsa-rdfc-2022-cryptosuite": "^1.2.0",
    "@digitalbazaar/vc-revocation-list": "github:blockchain-certificates/vc-revocation-list#fix/memory-leak",
    "@exodus/schemasafe": "^1.3.0",
    "@transmute/did-key-ed25519": "^0.3.0-unstable.10",
    "@transmute/did-key-secp256k1": "^0.3.0-unstable.10",
    "@transmute/ed25519-key-pair": "^0.7.0-unstable.63",
    "@trust/keyto": "^1.0.1",
    "base64url-universal": "^2.0.0",
    "bs58": "^6.0.0",
    "buffer": "^6.0.3",
    "jsonld": "^8.3.2",
    "jsonld-checker": "npm:@blockcerts/jsonld-checker@^0.1.9",
    "jsonld-signatures": "^11.5.0",
    "jsonld-signatures-merkleproof2019": "^2.17.0",
    "lodash.clonedeep": "^4.5.0",
    "secp256k1": "^5.0.0",
    "sha256": "^0.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@decentralized-identity/did-common-typescript": "^0.1.19",
    "@eslint/js": "^9.24.0",
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-multi-entry": "^7.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^24.0.13",
    "@types/sinon": "^17.0.1",
    "@vitest/coverage-istanbul": "^3.1.1",
    "body-parser": "^2.2.0",
    "brfs": "^2.0.2",
    "codecov": "^3.0.4",
    "commitlint": "^19.8.0",
    "crypto": "^1.0.1",
    "dts-bundle-generator": "^9.0.0",
    "eslint": "^9.24.0",
    "express": "^5.1.0",
    "husky": "^9.1.7",
    "jasmine-core": "^5.1.0",
    "jsdom": "^27.0.0",
    "karma": "^6.4.2",
    "karma-chrome-launcher": "^3.2.0",
    "karma-firefox-launcher": "^2.1.2",
    "karma-jasmine": "^5.1.0",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.9",
    "rimraf": "^6.0.1",
    "rollup": "^4.22.4",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "github:blockchain-certificates/rollup-plugin-node-globals",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.0",
    "rollup-plugin-visualizer": "^6.0.1",
    "semantic-release": "^24.1.2",
    "sinon": "^21.0.0",
    "snazzy": "^9.0.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1",
    "vitest": "^3.1.1",
    "xmlhttprequest": "^1.8.0"
  }
}
