{
  "name": "@blockcerts/cert-verifier-js",
  "version": "0.0.0-dev",
  "description": "Javascript library for verifying Blockcerts",
  "repository": {
    "type": "git",
    "url": "https://github.com/blockchain-certificates/cert-verifier-js.git"
  },
  "main": "dist/verifier.js",
  "module": "dist/verifier-es.js",
  "scripts": {
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --maxWorkers=4 --silent --noStackTrace --coverage",
    "test:coverage:report": "codecov",
    "build": "npm run build:esm && npm run build:es5",
    "build:esm": "rollup -c",
    "build:es5": "rollup -c rollup-es5.config.js",
    "lint": "semistandard --verbose | snazzy",
    "precommit": "npm run lint",
    "prepush": "npm run test && npm run lint",
    "semantic-release": "semantic-release"
  },
  "publishConfig": {
    "access": "public"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "> 1%",
              "ie >= 10"
            ]
          }
        }
      ]
    ]
  },
  "author": "Kim Duffy",
  "license": "MIT",
  "jest": {
    "modulePaths": [
      "<rootDir>/src/",
      "<rootDir>/node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ]
  },
  "semistandard": {
    "globals": [
      "afterEach",
      "describe",
      "beforeEach",
      "expect",
      "it",
      "xit",
      "xdescribe",
      "XMLHttpRequest"
    ],
    "ignore": [
      "dist/verifier.js",
      "dist/verifier-es.js",
      "dist/verifier-iife.js"
    ]
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "bigi": "^1.4.2",
    "bitcoinjs-lib": "^5.0.3",
    "bs58": "^3.0.0",
    "buffer": "^5.1.0",
    "debug": "^4.1.1",
    "ecurve": "^1.0.4",
    "eslint-config-semistandard": "^12.0.1",
    "eslint-plugin-import": "^2.13.0",
    "jsonld": "^0.4.11",
    "sha256": "^0.2.0",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.40",
    "@babel/core": "^7.0.0-beta.40",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "brfs": "^2.0.2",
    "codecov": "^3.0.4",
    "husky": "^2.2.0",
    "jest": "^23.4.1",
    "rollup": "^1.11.3",
    "rollup-plugin-babel": "^3.0.5",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.2.1",
    "rollup-plugin-node-resolve": "^4.2.4",
    "rollup-plugin-re": "^1.0.7",
    "rollup-plugin-terser": "^4.0.4",
    "semantic-release": "^15.9.15",
    "semistandard": "^13.0.1",
    "sinon": "^7.3.2",
    "snazzy": "^7.1.1"
  }
}
