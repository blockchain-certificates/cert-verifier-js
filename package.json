{
  "name": "@blockcerts/cert-verifier-js",
  "version": "0.0.0-dev",
  "description": "Javascript library for verifying Blockcerts",
  "repository": {
    "type": "git",
    "url": "https://github.com/blockchain-certificates/cert-verifier-js.git"
  },
  "main": "dist/verifier.js",
  "module": "dist/verifier-es.js",
  "scripts": {
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --maxWorkers=4 --silent --noStackTrace --coverage",
    "test:coverage:report": "codecov",
    "build": "npm run build:esm && npm run build:es5",
    "build:esm": "rollup -c",
    "build:es5": "rollup -c rollup-es5.config.js",
    "lint": "semistandard --verbose | snazzy",
    "precommit": "npm run lint",
    "prepush": "npm run lint && npm run test",
    "commitmsg": "commitlint -E HUSKY_GIT_PARAMS",
    "semantic-release": "semantic-release"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Kim Duffy",
  "license": "MIT",
  "jest": {
    "modulePaths": [
      "<rootDir>/src/",
      "<rootDir>/node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ]
  },
  "semistandard": {
    "globals": [
      "afterEach",
      "describe",
      "beforeEach",
      "expect",
      "it",
      "xit",
      "xdescribe",
      "XMLHttpRequest",
      "jest"
    ],
    "ignore": [
      "dist/verifier.js",
      "dist/verifier-es.js",
      "dist/verifier-iife.js"
    ]
  },
  "dependencies": {
    "bigi": "^1.4.2",
    "bitcoinjs-lib": "^5.0.3",
    "bs58": "^4.0.1",
    "buffer": "^5.1.0",
    "debug": "^4.1.1",
    "ecurve": "^1.0.4",
    "elliptic": "github:xg-wang/elliptic",
    "jsonld": "^1.6.2",
    "sha256": "^0.2.0",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/runtime": "^7.4.4",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "brfs": "^2.0.2",
    "codecov": "^3.0.4",
    "eslint-config-semistandard": "^13.0.0",
    "eslint-plugin-import": "^2.17.2",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "rollup": "^1.11.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.2.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-re": "^1.0.7",
    "rollup-plugin-terser": "^5.1.0",
    "semantic-release": "^15.9.15",
    "semistandard": "^13.0.1",
    "sinon": "^7.3.2",
    "snazzy": "^8.0.0"
  }
}
