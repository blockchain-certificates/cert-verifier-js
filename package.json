{
  "name": "@blockcerts/cert-verifier-js",
  "version": "0.0.0-dev",
  "description": "Javascript library for verifying Blockcerts",
  "repository": {
    "type": "git",
    "url": "https://github.com/blockchain-certificates/cert-verifier-js.git"
  },
  "main": "dist/verifier.js",
  "module": "dist/verifier-es.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "copy:declaration": "cp src/index.d.ts dist/index.d.ts",
    "test": "jest",
    "test:build": "jest --testRegex \"/*(.test.build.js)\" --runInBand && npm run test:build:iife",
    "test:build:iife": "karma start --single-run",
    "test:watch": "jest --watch",
    "test:coverage": "jest --maxWorkers=4 --silent --noStackTrace --coverage",
    "test:coverage:report": "codecov",
    "build": "npm run build:esm && npm run build:es5 && npm run transpile:node && npm run copy:declaration && npm run test:build",
    "build:esm": "rollup -c",
    "build:es5": "rollup -c rollup-es5.config.js",
    "transpile:node": "npm run transpile:node:ts && npm run transpile:node:js && npm run clean:lib:ts",
    "transpile:node:js": "npx babel src -d lib --copy-files",
    "transpile:node:ts": "npx babel src -d lib --copy-files --extensions '.ts'",
    "clean:lib:ts": "rimraf lib/\"**\"/*.ts",
    "lint": "npm run lint:js && npm run lint:ts",
    "lint:js": "semistandard --verbose | snazzy",
    "lint:ts": "eslint . --ext .ts",
    "semantic-release": "semantic-release"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Kim Duffy",
  "license": "MIT",
  "semistandard": {
    "globals": [
      "XMLHttpRequest"
    ],
    "env": "jest",
    "ignore": [
      "dist/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint && jest --clearCache && npm run test"
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.8.7",
    "@babel/runtime-corejs3": "^7.8.7",
    "@vaultie/lds-merkle-proof-2019": "0.0.6",
    "bigi": "^1.4.2",
    "bitcoinjs-lib": "^5.0.3",
    "bs58": "^4.0.1",
    "buffer": "^5.1.0",
    "core-js": "^3.6.4",
    "debug": "^4.1.1",
    "ecurve": "^1.0.4",
    "elliptic": "github:xg-wang/elliptic",
    "jsonld": "^1.8.1",
    "sha256": "^0.2.0",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-typescript": "^7.9.0",
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^8.0.0",
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.1",
    "@types/sinon": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "babel-jest": "^26.0.1",
    "brfs": "^2.0.2",
    "codecov": "^3.0.4",
    "eslint": "^6.8.0",
    "eslint-config-semistandard": "^15.0.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-with-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.0.0",
    "jasmine-core": "^3.5.0",
    "jest": "^25.1.0",
    "karma": "^5.0.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-firefox-launcher": "^1.3.0",
    "karma-jasmine": "^3.1.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.1.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.2.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-re": "^1.0.7",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript": "^1.0.1",
    "semantic-release": "^17.0.2",
    "semistandard": "^14.2.0",
    "sinon": "^9.0.0",
    "snazzy": "^8.0.0",
    "ts-jest": "^25.3.1",
    "typescript": "^3.8.3"
  }
}
